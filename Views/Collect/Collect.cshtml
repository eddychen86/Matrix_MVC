@model List<Matrix.ViewModels.CollectItemViewModel>
<!---------------------->
<main class="collect-page">
    <button onclick="closeCollectModal()" class="modal-close-btn">&times;</button>
    <div class="collect-container">
        <!-- 標題列 -->
        <div class="collect-header">
            <h2 class="title">收藏</h2>
            <select class="collect-filter">
                <option>本月</option>
                <option>上月</option>
            </select>
        </div>

        <!-- 卡片格線 -->
        <div class="collect-grid">
            @foreach (var item in Model)
            {
                <div class="collect-card">
                    <div class="collect-card_image">
                        <img src="@item.ImageUrl" alt="@item.Title" />
                        <div class="image-overlay"></div>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title">@item.Title</h2>
                        <p>加入日期：@item.CollectedAt.ToString("yyyy年MM月dd日")</p>
                    </div>
                </div>
            }
        </div>

        <!-- 分頁 -->
        <div class="collect-pagination">
            <button>&lt;</button>
            <button class="active">1</button>
            <button>2</button>
            <button>3</button>
            <button>4</button>
            <button>5</button>
            <button>&gt;</button>
        </div>
    </div>
</main>