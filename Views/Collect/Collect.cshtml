@model List<Matrix.ViewModels.CollectItemViewModel>
@{
    Layout = "~/Views/Shared/_PopUpPartial.cshtml";
}

<main class="popup-modal">
    <div class="popup-content relative">
        <button onclick="closeCollectModal()" class="modal-close-btn">&times;</button>

        <!-- 標題列 -->
        <div class="popup-header">
            <h2 class="title">收藏</h2> @* 組長的 title 樣式 *@
            <select class="subTitle">
                <option>本月</option>
                <option>上月</option>
            </select>
        </div>

        <!-- 卡片格線 -->
        <div class="popup-body">
            @foreach (var item in Model)
            {
                <div class="popup-item">
                    <img src="@item.ImageUrl" alt="@item.Title" />
                    <p class="para">@item.Title</p>
                    <p class="para">加入日期：@item.CollectedAt.ToString("yyyy年MM月dd日")</p>
                </div>
            }
        </div>

        <!-- 分頁 -->
        <div class="popup-pagination">
            <button>&lt;</button>
            <button class="active font-bold">1</button>
            <button>2</button>
            <button>3</button>
            <button>4</button>
            <button>5</button>
            <button>&gt;</button>
        </div>
    </div>
</main>
