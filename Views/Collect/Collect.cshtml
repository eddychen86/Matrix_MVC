<!---------------------->
<main class="collect-page">
    <div class="collect-container">
        <!-- 標題列 -->
        <div class="collect-header">
            <h2 class="collect-title">收藏</h2>
            <select class="collect-filter">
                <option>本月</option>
                <option>上月</option>
            </select>
        </div>

        <!-- 卡片格線 -->
        <div class="collect-grid">
            @for (int i = 0; i < 6; i++)
            {
                <div class="collect-card">
                    <div class="collect-card_image">
                        <img src="@Url.Content("~/static/img/Cute.png")" alt="Shoes" />
                        <div class="image-overlay"></div>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title">活動 2025年7月9日</h2>
                        <p>加入日期：2025年7月9日</p>
                    </div>
                </div>
            }
        </div>

        <!-- 分頁 -->
        <div class="collect-pagination">
            <button>&lt;</button>
            <button class="active">1</button>
            <button>2</button>
            <button>3</button>
            <button>4</button>
            <button>5</button>
            <button>&gt;</button>
        </div>
    </div>
</main>