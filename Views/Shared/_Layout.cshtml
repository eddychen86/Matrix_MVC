@inject ICustomLocalizer Localizer
@{
    ViewData["Title"] = "Matrix";
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matrix</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <!-- 防止 Vue 載入前的閃爍 -->
    <style>
        
    </style>
</head>

<body class="bg-primary">
    <!-- 將用戶認證資訊傳遞給 JavaScript -->
    <script>
        @{
            var menuModel = Matrix.Controllers.CommonController.BuildMenuModel(Context);
        }
        window.matrixAuthData = {
            isAuthenticated: @Json.Serialize(menuModel.IsAuthenticated),
            userId: '@menuModel.UserId',
            userName: '@menuModel.UserName',
            userRole: @menuModel.UserRole,
            avatarPath: '@menuModel.UserImg'
        };
    </script>

    <!-- 在 Vue 載入前顯示載入畫面 -->
    <div id="app" class="flex" v-cloak>
        <partial name="_Menu" model="CommonController.BuildMenuModel(Context)" />

        <div class="relative flex h-screen w-full flex-col gap-4 overflow-y-auto py-4 pr-4">
            <main class="grid flex-1 grid-cols-7 gap-4 text-white">
                <template v-if="isLoading">
                    <div class="flex h-[50vh] w-full items-center justify-center col-span-7">
                        <div class="flex flex-col items-center gap-4">
                            <img src="~/static/img/Loading.gif" alt="Loading" class="h-36 w-36" />
                            <span class="text-white title" data-i18n="Loading">@Localizer["Loading"]</span>
                        </div>
                    </div>
                </template>
                <template v-else>
                    @RenderBody()
                </template>
            </main>
            <partial name="_Footer" />

            <!-- Universal Popup Component -->
            @await Component.InvokeAsync("Popup")
        </div>
    </div>

    <!-- Vue 載入前的初始載入畫面 -->
    <div class="initial-loading">
        <div class="flex flex-col items-center gap-4">
            <img src="~/static/img/Loading.gif" alt="Loading" class="h-16 w-16" />
            <span class="text-gray-300">載入中...</span>
        </div>
    </div>

    <!-- Scripts moved outside of Vue app container -->
    @* <script src="~/lib/jquery/jquery.min.js"></script> *@
    @* 開發環境 (開發版 Vue) *@
    <environment include="Development">
        <script src="~/lib/vue/dist/vue.global.js" asp-append-version="true"></script>
    </environment>
    @* 生產環境 (生產版 Vue) *@
    <environment exclude="Development">
        <script src="~/lib/vue/dist/vue.global.prod.js" asp-append-version="true"></script>
    </environment>
    <script src="~/lib/lucide/dist/umd/lucide.min.js"></script>
    @* <script type="module" src="~/lib/ckEditor5/dist/ckeditor.js"></script> *@
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script src="@("https://unpkg.com/@ckeditor/ckeditor5-vue@5.1.0/dist/ckeditor.js")"></script>

    @* SignalR 客戶端庫和 Matrix SignalR 服務 *@
    <script src="~/lib/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
    <script src="~/js/signalr/matrix-signalr.js" asp-append-version="true"></script>

    @* 以上四支已轉為 ES Modules，由 main.js 動態 import *@
    <script type="module" src="~/js/main.js" asp-append-version="true"></script>

    <!-- Scripts section rendered outside of Vue app -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>