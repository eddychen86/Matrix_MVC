@{
    var menus = new[]
    {
        new { title = "Search", icon = "search", func = "" },
        new { title = "Notify", icon = "bell", func = "" },
        new { title = "Follows", icon = "share-2", func = "" },
        new { title = "Collects", icon = "bookmark", func = "" },
    };
}

<aside class="fixed top-0 left-0 z-10 drawer lg:drawer-open">
    <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col items-center justify-center">
        <!-- Page content here -->
        <label for="my-drawer-2" class="btn btn-primary drawer-button lg:hidden">
            Open drawer
        </label>
    </div>

    <div class="drawer-side p-4 hidden">
        <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu bg-secondary text-white text-3xl h-full w-sm p-10 rounded-[30px] flex flex-col justify-between">
            <!-- Sidebar content here -->
            <li class="p-5 flex flex-col gap-6">
                <button>
                    <img src="~/img/Matrix_Logo_White.png" alt="Matrix Logo" class="icon-lg">
                    Matrix
                </button>
                <button>
                    <i data-lucide="plus" class="bg-white rounded-full overflow-hidden flex justify-center items-center h-12 w-12 text-secondary p-1"></i>
                    Login
                </button>
            </li>
            <li class="p-5 flex flex-col gap-6">
                @foreach (var i in menus)
                {
                    <button>
                        <i data-lucide="@i.icon" class="icon-base"></i>
                        @i.title
                    </button>
                }
            </li>
            <li class="bg-white w-full flex flex-col gap-6 text-black p-5 rounded-3xl">
                <button>
                    <i data-lucide="panel-right-open" class="icon-base"></i>
                    hide bar
                </button>
                <button>
                    <i data-lucide="log-out" class="icon-base"></i>
                    Log out
                </button>
            </li>
        </ul>
    </div>
</aside>