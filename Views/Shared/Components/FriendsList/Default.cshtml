@inject ICustomLocalizer Localizer

<div class="flex items-center justify-between mb-2">
    <h3 class="title">好友列表</h3>
    <span class="para opacity-60">共 {{ friendsTotal }} 位</span>
</div>

<div class="join mb-3 rounded-[30px] border border-white overflow-hidden">
    <button class="join-item btn btn-xs border border-white"
            :class="friendsStatus==='accepted' ? 'btn-primary' : 'btn-ghost'"
            v-on:click="changeFriendsStatus('accepted')">已接受</button>
    <button class="join-item btn btn-xs border border-white"
            :class="friendsStatus==='pending' ? 'btn-primary' : 'btn-ghost'"
            v-on:click="changeFriendsStatus('pending')">待處理</button>
    <button class="join-item btn btn-xs border border-white"
            :class="friendsStatus==='declined' ? 'btn-primary' : 'btn-ghost'"
            v-on:click="changeFriendsStatus('declined')">已拒絕</button>
    <button class="join-item btn btn-xs border border-white"
            :class="friendsStatus==='blocked' ? 'btn-primary' : 'btn-ghost'"
            v-on:click="changeFriendsStatus('blocked')">封鎖</button>
    <button class="join-item btn btn-xs border border-white"
            :class="friendsStatus==='all' ? 'btn-primary' : 'btn-ghost'"
            v-on:click="changeFriendsStatus('all')">全部</button>
</div>

<ul class="list flex flex-col gap-3">
    <li v-if="friendsLoading" class="para opacity-60">載入中...</li>
    <li v-else-if="!friends || friends.length === 0" class="para opacity-60">尚無好友</li>

    <li class="list-row !p-2 items-center" v-for="item in friends" :key="item.userId">
        <div>
            <img v-if="item.avatarPath" class="size-10 rounded-full object-cover" :src="item.avatarPath" :alt="item.userName" />
            <div v-else class="size-10 rounded-full bg-secondary flex items-center justify-center text-white font-bold">
                {{ (item.userName || '?').slice(0,1).toUpperCase() }}
            </div>
        </div>
        <div class="font-medium text-white">{{ item.userName }}</div>
    </li>
</ul>
