<!-- Universal Popup Modal -->
<div id="popup-overlay" v-show="popupState.isVisible" @@click="closePopup">
    <div id="popup-container" @@click.stop="">
        <!-- Header -->
        <div id="popup-header" class="flex justify-between items-center w-full">
            <h3 class="title w-1/3">{{ popupState.title }}</h3>
            <div class="flex gap-4 justify-end w-1/3">
                <div class="relative w-full">
                    <input type="text" v-model="searchQuery" class="para w-full h-12 border rounded-full bg-stone-700 outline-none px-4">
                    <button class="absolute top-1/2 right-4 -translate-y-1/2 ">
                        <i data-lucide="search" class="icon-base"></i>
                    </button>
                </div>
                <button @@click="closePopup">
                    <i data-lucide="x" class="icon-base text-red-300"></i>
                </button>
            </div>
        </div>
        
        <!-- Content -->
        <div class="popup-content">
            <!-- Search Content -->
            <div v-show="popupState.type !== 'Search'">
                <div class="popup-data">
                    <div v-for="item in popupData[popupState.type]" :key="item.Id">
                        <div class="card">
                            <img :src="item.imageUrl" alt="" />
                            <div class="card-body">
                                <div class="flex flex-col gap-2 absolute z-10 bottom-0 left-0 p-4">
                                    <div class="user">
                                        <img src="" alt=""/>
                                        <h2 class="card-title title">{{ item.authorName }}</h2>
                                    </div>
                                    <p class="para">{{ formatDate(item.collectedAt) }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>