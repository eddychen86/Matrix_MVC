<!-- Universal Popup Modal -->
<div id="popup-overlay" v-show="popupState.isVisible" @@click="closePopup">
    <div id="popup-container" @@click.stop="">
        <!-- Header -->
        <div id="popup-header" class="flex w-full items-center justify-between">
            <h3 class="title w-1/3">{{ popupState.title }}</h3>
            <div class="flex w-1/3 justify-end gap-4">
                <div class="relative w-full">
                    <input type="text" v-model="searchQuery" class="para h-12 w-full rounded-full border bg-stone-700 px-4 outline-none">
                    <button class="absolute top-1/2 right-4 -translate-y-1/2">
                        <i data-lucide="search" class="icon-base"></i>
                    </button>
                </div>
                <button @@click="closePopup">
                    <i data-lucide="x" class="icon-base text-red-300"></i>
                </button>
            </div>
        </div>
        
        <!-- Content -->
        <div class="popup-content">
            <!-- Search Content -->
            <div v-if="popupState.type == 'Collects'">
                <div class="popup-data">
                    <div v-for="item in popupData[popupState.type]" :key="item.Id">
                        <div class="card">
                            <img :src="item.imageUrl" alt="" />
                            <div class="card-body">
                                <div class="absolute bottom-0 left-0 z-10 flex flex-col gap-2 p-4">
                                    <div class="user">
                                        <img src="" alt=""/>
                                        <h2 class="card-title title">{{ item.authorName }}</h2>
                                    </div>
                                    <p class="para">{{ formatDate(item.collectedAt) }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div v-if="popupState.type == 'Notify'">
                <div class="popup-data-notify space-y-4">
                    <div v-for="item in popupData[popupState.type]" :key="item.senderName" class="item-center flex justify-between rounded-lg bg-neutral-800 px-4 py-3 transition hover:bg-neutral-700">
                        <div class="flex items-center space-x-4">
                            <img :src="item.senderAvatarUrl" class="h-10 w-10 rounded-full border border-gray-600" />
                            <div>
                                <p class="font-semibold">{{ item.senderName }}</p>
                                <p class="text-sm text-gray-400">{{ item.message }}</p>
                            </div>
                        </div>
                        <div class="flex flex-col items-end space-y-1">
                            <span class="text-xs text-gray-500">{{ timeAgo(item.sentTime) }}</span>
                            <button class="text-sm text-blue-400 hover:underline">Reply</button>
                        </div>
                   </div>
                </div>
            </div>
            <div v-if="popupState.type == 'Follow'">
                <div class="popup-data-follow space-y-4">
                    <div v-for="(item, index) in popupData[popupState.type]"
                         :key="index"
                         class="item-center flex justify-between rounded-lg bg-neutral-800 px-4 py-3 transition hover:bg-neutral-700">
                        <!-- 左側：頭像與名稱 -->
                        <div class="flex items-center space-x-4">
                            <img :src="item.senderAvatarUrl" class="h-10 w-10 rounded-full border border-gray-600" />
                            <div>
                                <p class="title">{{ item.senderName }}</p>
                                <p class="subTitle text-sm text-gray-400">
                                    你於 {{ timeAgo(item.followTime) }} 開始追蹤他
                                </p>
                            </div>
                        </div>

                        <!-- 右側：可擴充按鈕（例如取消追蹤） -->
                        <div class="flex flex-col items-end justify-between space-y-1">
                            <button class="cts-btn !text-red-400 hover:underline">取消追蹤</button>
                        </div>
                    </div>
                </div>
            </div>

            <div v-if="popupState.type == 'Search'">
            </div>
        </div>
    </div>
</div>