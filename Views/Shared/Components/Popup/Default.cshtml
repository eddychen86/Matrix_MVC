                    <div class="search-form">
                        <input type="text" v-model="searchQuery" class="para">
                        <button>
                            <i data-lucide="search" class="icon-base"></i>
                        </button>
                    </div>
                </div>
                <div class="data"></div>
            </div>
            
            <!-- Collects Content -->
            <div v-show="popupState.type === 'Collects'" class="popup-show">
                <div class="popup-tool">
                    <div class="search-form">
                        <input type="text" v-model="searchQuery" class="para">
                        <button>
                            <i data-lucide="search" class="icon-base"></i>
                        </button>
                    </div>
                </div>
                <div class="data"></div>
            </div>
        </div>
    </div>
</div>