@inject ICustomLocalizer Localizer

<!-- Edit Profile Popup Modal -->
<div v-show="editMode" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" @@click.self="cancel">
    <div class="bg-gray-800 rounded-lg p-6 w-full max-w-md mx-4 max-h-[90vh] overflow-y-auto">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-xl font-semibold text-white" data-i18n="EditProfile">@Localizer["EditProfile"]</h3>
            <button @@click="cancel" class="text-gray-400 hover:text-white">
                <i data-lucide="x" class="w-6 h-6"></i>
            </button>
        </div>

        <!-- Form -->
        <div class="space-y-4">
            <!-- Display Name -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2" data-i18n="DisplayName">
                    @Localizer["DisplayName"]
                </label>
                <input 
                    v-model="profile.displayName"
                    type="text" 
                    class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="請輸入顯示名稱"
                />
            </div>

            <!-- Bio -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2" data-i18n="Bio">
                    @Localizer["Bio"]
                </label>
                <textarea 
                    v-model="profile.bio"
                    rows="3"
                    class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"
                    placeholder="請輸入個人簡介"
                ></textarea>
            </div>

            <!-- Email -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2" data-i18n="Email">
                    @Localizer["Email"]
                </label>
                <input 
                    v-model="profile.email"
                    type="email" 
                    class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="請輸入電子郵件"
                />
            </div>

            <!-- Password -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2" data-i18n="Password">
                    @Localizer["Password"]
                </label>
                <input 
                    v-model="profile.password"
                    type="password" 
                    class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="請輸入新密碼（留空則不修改）"
                />
                <p class="text-xs text-gray-400 mt-1" data-i18n="PasswordHint">
                    @Localizer["PasswordHint"]
                </p>
            </div>

            <!-- Website Links -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2" data-i18n="WebsiteLinks">
                    @Localizer["WebsiteLinks"]
                </label>
                
                <div class="space-y-2">
                    <input 
                        v-model="profile.website1"
                        type="url" 
                        class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="網站連結 1"
                    />
                    <input 
                        v-model="profile.website2"
                        type="url" 
                        class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="網站連結 2"
                    />
                    <input 
                        v-model="profile.website3"
                        type="url" 
                        class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="網站連結 3"
                    />
                </div>
            </div>

            <!-- Privacy Setting -->
            <div>
                <label class="flex items-center text-sm text-gray-300">
                    <input 
                        v-model="isPublic"
                        @@change="toggleIcon"
                        type="checkbox" 
                        class="mr-2 rounded bg-gray-700 border-gray-600 text-blue-500 focus:ring-blue-500"
                    />
                    <span data-i18n="PublicProfile">@Localizer["PublicProfile"]</span>
                </label>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-3 pt-4">
                <button 
                    type="button" 
                    @@click="cancel"
                    class="px-4 py-2 text-sm font-medium text-gray-300 bg-gray-700 border border-gray-600 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500"
                    data-i18n="Cancel"
                >
                    @Localizer["Cancel"]
                </button>
                <button 
                    type="button"
                    @@click="update"
                    class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    data-i18n="SaveChanges"
                >
                    @Localizer["SaveChanges"]
                </button>
            </div>
        </div>
    </div>
</div>