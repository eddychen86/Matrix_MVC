@{
    var collectList = Model as List<Matrix.ViewModels.CollectItemViewModel>;
}

<main class="collect-page">
    <button onclick="closeCollectModal()" class="modal-close-btn">&times;</button>
    <div class="collect-container">
        <!-- 標題列 -->
        <div class="collect-header">
            <h2 class="collect-title title-lg">收藏</h2>
            <select class="collect-filter subTitle">
                <option>本月</option>
                <option>上月</option>
            </select>
        </div>

        <!-- 卡片格線 -->
        <div class="collect-grid">
            @foreach (var item in collectList)
            {
                <div class="collect-card">
                    <img src="@item.ImageUrl" alt="@item.Title" />
                    <p class="para">@item.Title</p>
                    <p class="para">@item.AuthorName</p>
                </div>
            }
        </div>

        <!-- 分頁 -->
        <div class="collect-pagination">
            <button>&lt;</button>
            <button class="active">1</button>
            <button>2</button>
            <button>3</button>
            <button>4</button>
            <button>5</button>
            <button>&gt;</button>
        </div>
    </div>
</main>