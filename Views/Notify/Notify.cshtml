@model List<Matrix.ViewModels.NotifyItemViewModel>

<div class="flex min-h-screen items-center justify-center bg-gray-800">
    <div class="w-full max-w-3xl rounded-2xl bg-neutral-900 p-6 text-white shadow-xl">
        <!-- 標題區塊 -->
        <div class="mb-6 flex items-center justify-between">
            <h2 class="text-xl font-bold">Notify</h2>
            <select class="rounded-md border border-neutral-600 bg-neutral-800 px-3 py-1 text-sm text-white">
                <option>This month</option>
                <option>Last month</option>
            </select>
        </div>

        <!-- 通知清單 -->
        <div class="space-y-4">
            @foreach (var item in Model)
            {
                <div class="flex items-center justify-between rounded-lg bg-neutral-800 px-4 py-3 transition hover:bg-neutral-700">
                    <!-- 左邊：頭像與訊息 -->
                    <div class="flex items-center space-x-4">
                        <img src="@Url.Content(item.SenderAvatarUrl)" class="h-10 w-10 rounded-full border border-gray-600" />
                        <div>
                            <p class="font-semibold">@item.SenderName</p>
                            <p class="text-sm text-gray-400">@item.Message</p>
                        </div>
                    </div>


                    <!-- 右邊：時間與按鈕 -->
                    <div class="flex flex-col items-end space-y-1">
                        <span class="text-xs text-gray-500">2h</span>
                        <button class="text-sm text-blue-400 hover:underline">Reply</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>