<div class="flex items-center justify-center min-h-screen bg-gray-800">
    <div class="bg-neutral-900 text-white rounded-2xl p-6 w-full max-w-3xl shadow-xl">
        <!-- 標題區塊 -->
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold">Notify</h2>
            <select class="bg-neutral-800 text-white px-3 py-1 rounded-md border border-neutral-600 text-sm">
                <option>This month</option>
                <option>Last month</option>
            </select>
        </div>

        <!-- 通知清單 -->
        <div class="space-y-4">
            @for (int i = 0; i < 6; i++)
            {
                <div class="flex items-center justify-between bg-neutral-800 px-4 py-3 rounded-lg hover:bg-neutral-700 transition">
                    <!-- 左邊：頭像與訊息 -->
                    <div class="flex items-center space-x-4">
                        <img src="@Url.Content("~/img/avatar.png")" class="w-10 h-10 rounded-full border border-gray-600" />
                        <div>
                            <p class="font-semibold">Jordan Smith</p>
                            <p class="text-sm text-gray-400">Great artwork, love it! Great artwork, love it!</p>
                        </div>
                    </div>

                    <!-- 右邊：時間與按鈕 -->
                    <div class="flex flex-col items-end space-y-1">
                        <span class="text-xs text-gray-500">2h</span>
                        <button class="text-blue-400 text-sm hover:underline">Reply</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>