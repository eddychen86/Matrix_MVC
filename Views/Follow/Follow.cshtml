@model List<Matrix.Models.Follow>

<div class="mt-20 flex justify-center">
    <div class="w-full max-w-7xl rounded-2xl bg-black p-6 text-white shadow-lg">
        <!-- 標題區 -->
        <div class="mb-6 flex items-center justify-between">
            <h2 class="text-xl font-bold">Follows</h2>
            <button class="flex items-center rounded-md bg-gray-700 px-4 py-1 text-sm">
                This month
                <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
                </svg>
            </button>
        </div>

        <!-- 使用統一的Grid包左右兩邊＋分隔線 -->
        <div class="grid grid-cols-12 gap-4">
            <!-- 左側留言清單（8欄） -->
            <div class="col-span-8 space-y-4">
                @foreach (var follow in Model)
                {
                    <div class="rounded-xl bg-gray-700 p-4">
                        <p class="truncate">
                            @follow.User.DisplayName
                        </p>
                        <p class="mt-2 text-sm text-gray-400">
                            Joined @follow.FollowTime.ToString("dd MMM yyyy")
                        </p>
                    </div>
                }
            </div>

            <!-- 中間直線分隔欄（1欄） -->
            <div class="col-span-1 flex justify-center">
                <div class="h-full w-px bg-gray-400"></div>
            </div>

            <!-- 右側頭像與名字清單（3欄） -->
            <div class="col-span-3 flex flex-col justify-start space-y-4">
                @foreach (var follow in Model)
                {
                    <div class="flex items-center space-x-2">
                        <img src="@follow.User.AvatarPath" class="h-10 w-10 rounded-full border border-white" />
                        <span class="text-sm font-semibold">@follow.User.DisplayName</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>