@inject ICustomLocalizer Localizer
@{
    ViewData["Title"] = Localizer["About"];
    var mbs = ViewBag.Teams;
}

<div class="about-container">
    <!-- 主標題區域 -->
    <div class="about-header">
        <h1 class="about-title" data-i18n="About">@Localizer["About"]</h1>
        <div class="about-divider"></div>
    </div>

    <ul class="team-list">
        @foreach (var mb in mbs){
            <li class="team-card group">
                <div class="team-img">
                    <img src="~/static/teams/@mb.img" class="rounded-[20px] m-4">
                    <div class="flex flex-col gap-2 items-center justify-center h-1/3 mb-8">
                        <h2 class="team-name text-2xl">@mb.twName</h2>
                        <h3 class="subTitle h-7">@mb.engName</h3>
                        <hr>
                        <h4 class="team-level">@mb.level</h4>
                        <br>
                        <div class="team-links">
                            <a href="mailto:@mb.email" target="_blank" class="team-link">
                                <i data-lucide="mail" class="team-icon"></i>
                            </a>
                            <a href="https://github.com/@mb.github" target="_blank" class="team-link">
                                <i data-lucide="github" class="team-icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <section class="team-section">
                    @* <p class="para">@mb.description</p> *@
                    
                    <h1 class="text-2xl font-bold">技術 | Skills</h1>
                    <ul class="team-skills">
                        @foreach (var sk in mb.skill) {
                            <li class="team-skill">
                                <p class="team-skill-text subTitle">@sk</p>
                            </li>
                        }
                    </ul>

                    <h1 class="text-2xl font-bold">任務 | Works</h1>
                    <div class="team-works_layout">
                        <div class="green-dot"></div>
                        <div class="flex flex-col gap-4">
                            <ul class="team-works">
                                @foreach (var wk in mb.works.envs) {
                                    <li class="team-work-item">
                                        <p>@wk</p>
                                    </li>
                                }
                            </ul>
                            <hr>
                            <ul class="team-works">
                                @foreach (var wk in mb.works.pages) {
                                    <li class="team-work-item">
                                        <p>@wk</p>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </section>
            </li>
        }
    </ul>
</div>