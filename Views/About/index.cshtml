@inject ICustomLocalizer Localizer
@{
    ViewData["Title"] = Localizer["About"];
    var mbs = ViewBag.Teams;
}

<div class="col-span-7 py-12 ">
    <!-- 主標題區域 -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4" data-i18n="About">@Localizer["About"]</h1>
        <div class="w-24 h-1 bg-gradient-to-r from-[#304357] to-stone-500 mx-auto mb-6"></div>
    </div>

    <ul class="flex gap-4 max-w-[90vw] mx-auto w-full overflow-x-auto overflow-y-hidden">
        @foreach (var mb in mbs){
            <li class="min-w-[60vw] flex p-8 border border-white overflow-hidden rounded-[30px] transition-all duration-500 grow active:flex-grow-3">
                <img src="~/static/teams/@mb.img" title="@mb.twName" alt="@mb.twName" class="w-1/6 h-full">
                <section class="flex flex-col gap-2">
                    <h2 class="text-2xl font-bold">@mb.twName <span class="subTitle">@mb.engName</span></h2>
                    <h4>@mb.level</h4>
                    <p class="para">@mb.description</p>
                    <div class="flex gap-4 items-center">
                        <a href="mailto:@mb.email" target="_blank" class="flex items-center justify-center border-2 border-white rounded-full p-1">
                            <i data-lucide="mail" class="size-5"></i>
                        </a>
                        <a href="https://github.com/@mb.github" target="_blank" class="flex items-center justify-center border-2 border-white rounded-full p-1">
                            <i data-lucide="github" class="size-5"></i>
                        </a>
                    </div>
                    <ul class="grid grid-cols-4 gap-2">
                        @foreach (var sk in mb.skill) {
                            <li class="col-sapn-1 rounded-full px-3 py-1 bg-stone-500 text-white flex items-center justify-center">
                                <p class="para m-0 p-0">@sk</p>
                            </li>
                        }
                    </ul>
                    <hr>
                    <div>
                        <ul class="grid grid-cols-2 gap-2">
                            @foreach (var wk in mb.works) {
                                <li class="col-span-1 flex gap-2 items-center">
                                    <i data-lucide="circle-check-big" class="size-5 text-green-500"></i>
                                    <p>@wk</p>
                                </li>
                            }
                        </ul>
                    </div>
                </section>
            </li>
        }
    </ul>
</div>