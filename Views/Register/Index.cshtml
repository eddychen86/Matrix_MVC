@model Matrix.ViewModels.RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="zh-tw">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matrix</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@700&display=swap" rel="stylesheet">
</head>

<body class="register-bg">
    <div class="register-panel">
        <div class="register-panel_inner">
            <h1 class="register-title">Sign Up</h1>
            <h4 class="register-subtitle">Join the blockchain community</h4>

            <form class="register-form" asp-action="Index" method="post">
                <div class="register-form_group">
                    <label asp-for="UserName" class="register-form_label"></label>
                    <input asp-for="UserName" class="register-form_input" />
                    <div class="register-form_error-group">
                        <span asp-validation-for="UserName" class="register-form_error"></span>
                    </div>
                </div>
                <div class="register-form_group">
                    <label asp-for="Email" class="register-form_label"></label>
                    <input asp-for="Email" class="register-form_input" />
                    <div class="register-form_error-group">
                        <span asp-validation-for="Email" class="register-form_error"></span>
                    </div>
                </div>
                <div class="register-form_group">
                    <label asp-for="Password" class="register-form_label"></label>
                    <input asp-for="Password" class="register-form_input" />
                    <div class="register-form_error-group">
                        <span asp-validation-for="Password" class="register-form_error"></span>
                    </div>
                </div>
                <div class="register-form_group">
                    <label asp-for="ConfirmPassword" class="register-form_label"></label>
                    <input asp-for="ConfirmPassword" class="register-form_input" />
                    <div class="register-form_error-group">
                        <span asp-validation-for="ConfirmPassword" class="register-form_error"></span>
                    </div>
                </div>
                <div class="register-form_button-group">
                    <button type="submit" class="register-form_button">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/vue/dist/vue.global.js"></script>
    <script src="~/lib/lucide/dist/umd/lucide.min.js"></script>
    <script>
        lucide.createIcons();
    </script>




@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

</html>
