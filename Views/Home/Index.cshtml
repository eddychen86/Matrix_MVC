    <aside class="friends-list">
        await Component.InvokeAsync("FriendsList")
    </aside>
-->
@if (ViewBag.IsAuthenticated) {
    @* Create Post Popup Component *@
    @await Component.InvokeAsync("CreatePostPopup")

    <!-- 留言視窗 -->
    @await Component.InvokeAsync("ReplyPopup")
}
