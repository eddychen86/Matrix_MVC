<main class="flex items-center justify-center min-h-screen bg-gray-800">
    <!-- 黑色浮出視窗 -->
    <div class="bg-neutral-900 text-white w-full max-w-5xl p-6 rounded-xl shadow-xl">
        <!-- 標題 -->
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">收藏</h2>
            <select class="bg-neutral-800 text-white px-3 py-1 rounded-md border border-neutral-600">
                <option>本月</option>
                <option>上月</option>
            </select>
        </div>

        <!-- 卡片格線 -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            @for (int i = 0; i < 6; i++)
            {
                <div class="bg-neutral-800 p-4 rounded-lg shadow hover:shadow-md transition duration-300">
                    <img src="@Url.Content("~/img/Cut.png")" class="rounded-md h-40 w-full object-cover mb-3" />
                    <p class="text-sm font-semibold">活動 2022年3月12日</p>
                    <p class="text-xs text-gray-400">加入日期：2022年3月12日</p>
                </div>
            }
        </div>

        <!-- 分頁按鈕 -->
        <div class="flex justify-center mt-6 space-x-2">
            <button class="w-8 h-8 rounded-full bg-white text-black">&lt;</button>
            <button class="w-8 h-8 rounded-full bg-white text-black font-bold">1</button>
            <button class="w-8 h-8 rounded-full bg-white text-black">2</button>
            <button class="w-8 h-8 rounded-full bg-white text-black">3</button>
            <button class="w-8 h-8 rounded-full bg-white text-black">4</button>
            <button class="w-8 h-8 rounded-full bg-white text-black">5</button>
            <button class="w-8 h-8 rounded-full bg-white text-black">&gt;</button>
        </div>
    </div>
</main>