@{
    // Layout = null;
    ViewData["Title"] = "Profile";

    var fake = ViewBag.FakeProfile;
}
@* <script src="https://cdn.tailwindcss.com"></script> *@

<!-- 頂部橫幅與頭像 -->
<header id="profile-header">
    <img id="profile-banner" src="@fake.banner" alt="Profile Banner">
    
    <div id="profile-avatar">
        <div class="flex items-center justify-between">
            <div id="profile-avatar_img">
                <img src="@fake.avatarImg" alt="Avatar Img">
            </div>
            <div id="profile-name">
                <h1 class="title-lg">@fake.name</h1>
                @if (!fake.isPrivate){
                    <i data-lucide="globe" class="icon-base"></i>
                } else{
                    <i data-lucide="globe-lock" class="icon-base"></i>
                }
            </div>
        </div>
    </div>
</header>


<section id="profile-body">
    <!-- 左側：個人資訊 -->
    <div id="profile-user_info">
        <div class="flex items-center justify-between w-full">
            <h2 class="font-bold title">Profile Overview</h2>
            <i data-lucide="pen" class="icon-base"></i>
        </div>
        
        <div>
            <h2 class="font-bold subTitle">自我介紹</h2>
            <p class="para">@fake.overview.intro</p>
        </div>
        
        <div class="flex flex-col gap-4 para text-gray-400">
            @foreach (var i in fake.overview.extends){
                <p class="para">@i</p>
            }
        </div>

        <!-- 圖片區塊 (RWD: 下方顯示) -->
        <div class="flex flex-col gap-4">
            @foreach (var i in fake.overview.images) {
                <img src="@i" class="h-[108px] w-full rounded-lg object-cover" alt="" />
            }
        </div>
    </div>

    <!-- 中間：動態貼文 -->
    <div class="flex flex-col gap-4">
        @foreach (var i in fake.articles) {
            <div class="rounded-[30px] bg-accent p-6 flex flex-col gap-4">
                <div class="flex items-center gap-4">
                    <img src="@i.userImg" alt="@i.user" class="h-12 w-12 rounded-full object-cover object-center">
                    <div class="flex flex-col gap-4">
                        <h3 class="font-semibold subTitle">@i.user</h3>
                        <p class="para text-stone-500">@i.createTime</p>
                    </div>
                </div>
                <p class="para">@i.content</p>
                <div class="grid grid-cols-5 gap-4">
                    @foreach (var img in i.images) {
                        <img src="@img" class="h-28 rounded-[30px] object-cover object-center" alt="">
                    }
                </div>
                <div class="flex items-center justify-end gap-4">
                    <div class="flex items-center gap-2 text-orange-400">
                        <i data-lucide="thumbs-up"></i>
                        <span>@i.praises</span>
                    </div>
                    <div class="flex items-center gap-2 text-blue-400">
                        <i data-lucide="bookmark"></i>
                        <span>@i.collects</span>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- 右側預留好友列表空間（未來可放內容） -->
<div class="fixed top-0 right-0 z-10 hidden h-full w-[300px] bg-transparent lg:block">
    <!-- 好友列表未來放這裡 -->
</div>










