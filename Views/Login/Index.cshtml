@model Matrix.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="zh-tw">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matrix</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@700&display=swap" rel="stylesheet">
</head>

<body class="login_bg">

    <div class="login-card">
        <div class="login-div">
            <h1 class="login-card_title">Log in</h1>
            <h4 class="login-card_subtitle">Join the blockchain community</h4>
            
            <form class="login-card_form" asp-action="Index" method="post">
                <div>
                    <label asp-for="UserName" class="login-card_label"></label>
                    <input asp-for="UserName" class="login-card_input" />
                    <div class="login-card_validation">
                        <span asp-validation-for="UserName" class="login-card_error"></span>
                    </div>
                </div>
                <div>
                    <label asp-for="Password" class="login-card_label"></label>
                    <input asp-for="Password" class="login-card_input" />
                    <div class="login-card_validation">
                        <span asp-validation-for="Password" class="login-card_error"></span>
                    </div>
                </div>
                <div class="flex w-full items-center justify-between">
                    <label class="flex items-center gap-2">
                        <input type="checkbox" class="peer h-5 w-5 opacity-0" />
                        <span class="inline-block h-5 w-5 rounded bg-white transition peer-checked:bg-[#ff7f3e]"></span>
                        <span class="ml-2 text-white font-semibold font-['Source_Sans_Pro']">Remember me</span>
                    </label>
                    <a href="javascript:void(0)" onclick="openModal()" class="text-white font-bold font-['Source_Sans_Pro'] hover:underline">Forgot password?</a>
                </div>
                <button type="submit" class="w-full h-12 rounded-full bg-[#ff7f3e] text-white text-lg font-bold font-['Source_Sans_Pro'] hover:bg-orange-500 transition">Login</button>
                <div class="flex justify-center gap-4">
                    <a href="https://accounts.google.com/signin" target="_blank" rel="noopener noreferrer" class="flex hidden h-12 w-12 items-center justify-center rounded-full bg-white shadow hover:bg-gray-100">
                        <img src="#" class="h-5 w-5" alt="Google logo" />
                    </a>
                    <a href="https://www.facebook.com/login" target="_blank" rel="noopener noreferrer" class="flex hidden h-12 w-12 items-center justify-center rounded-full bg-[#2a629a] shadow hover:bg-blue-700">
                        <img src="#" class="h-5 w-5" alt="Facebook logo" />
                    </a>
                </div>
                <div class="flex justify-center">
                    <span class="text-white text-sm font-['Roboto']">New here? Sign up now!</span>
                    <a href="/Register" class="ml-2 text-white text-sm font-medium font-['Roboto'] hover:underline">Sign up</a>
                </div>
            </form>
        </div>
    </div>




    <div id="forgotModal" class="fixed inset-0 z-50 flex hidden items-center justify-center">
        <div class="absolute inset-0 bg-white opacity-20"></div>

        <div class="relative z-10 box-border w-full max-w-[375px] rounded-[16px] border border-transparent bg-[#162534] p-6 shadow-[0_10px_15px_rgba(0,0,0,0.5)]">
            <button class="absolute top-2 right-3 text-xl text-white hover:text-gray-400" onclick="closeModal()">&times;</button>

            <div class="flex flex-col gap-6">
                <label class="font-[Manrope] font-bold text-white text-[18px]">Forgot Password</label>
                <label class="font-[Manrope] font-medium text-white text-[14px]">Please enter your email.</label>
            </div>
            <div class="mt-2 flex h-[42px] w-full items-center rounded-full border-2 border-white bg-white">
                <input type="email"
                       placeholder="Enter your email"
                       class="h-full flex-1 rounded-l-full border-none bg-white pl-4 font-[Manrope] text-black text-[15px] outline-none"
                       style="font-family:'Manrope',sans-serif;" />
                <button class="z-10 ml-[-16px] h-full rounded-full border-none bg-[#2a629a] px-7 font-[Manrope] font-semibold text-white text-[15px] transition outline-none hover:bg-[#305a85]"
                        style="font-family:'Manrope',sans-serif;">
                    Submit
                </button>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/vue/dist/vue.global.js"></script>
    <script src="~/lib/lucide/dist/umd/lucide.min.js"></script>
    <script>
        lucide.createIcons();

        function openModal() {
          document.getElementById('forgotModal').classList.remove('hidden');
        }
        function closeModal() {
          document.getElementById('forgotModal').classList.add('hidden');
        }
        document.addEventListener('keydown', function(e) {
          if (e.key === "Escape") closeModal();
        });
    </script>
</body>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

</html>