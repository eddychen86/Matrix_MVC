@model Matrix.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="zh-tw">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matrix</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@700&display=swap" rel="stylesheet">
</head>

<body class="login_bg">

    <div class="login-card">
        <div class="login-div">
            <h1 class="login-card_title">Log in</h1>
            <h4 class="login-card_subtitle">Join the blockchain community</h4>
            
            <form class="login-card_form" asp-action="Index" method="post">
                <div>
                    <label asp-for="UserName" class="login-card_label"></label>
                    <input asp-for="UserName" class="login-card_input" />
                    <div class="login-card_validation">
                        <span asp-validation-for="UserName" class="login-card_error"></span>
                    </div>
                </div>
                <div>
                    <label asp-for="Password" class="login-card_label"></label>
                    <input asp-for="Password" class="login-card_input" />
                    <div class="login-card_validation">
                        <span asp-validation-for="Password" class="login-card_error"></span>
                    </div>
                </div>
                <div class="login-card_options">
                    <label class="login-card_remember">
                        <input type="checkbox" class="login-card_checkbox" />
                        <span class="login-card_custombox"></span>
                        <span class="login-card_text">Remember me</span>
                    </label>
                    <a href="javascript:void(0)" onclick="openModal()" class="login-card_forgot">Forgot password?</a>
                </div>
                <button type="submit" class="login-card_button">Login</button>
                <div class="login-card_socials">
                    <a href="https://accounts.google.com/signin" target="_blank" rel="noopener noreferrer" class="login-card_social login-card_social-google">
                        <img src="#" class="login-card_social-logo" alt="Google logo" />
                    </a>
                    <a href="https://www.facebook.com/login" target="_blank" rel="noopener noreferrer" class="login-card_social login-card_social-facebook">
                        <img src="#" class="login-card_social-logo" alt="Facebook logo" />
                    </a>
                </div>
                <div class="login-card_signup">
                    <span class="login-card_signup-text">New here? Sign up now!</span>
                    <a href="/Register" class="login-card_signup-link">Sign up</a>
                </div>

            </form>
        </div>
    </div>




    <div id="forgotModal" class="forgot-modal">
        <div class="forgot-modal_backdrop"></div>
        <div class="forgot-modal_content">
            <button class="forgot-modal_close" onclick="closeModal()">&times;</button>
            <div class="forgot-modal_form">
                <label class="forgot-modal_label forgot-modal_label-title">Forgot Password</label>
                <label class="forgot-modal_label forgot-modal_label-subtitle">Please enter your email.</label>
                <div class="forgot-modal_input-group">
                    <input type="email"
                           placeholder="Enter your email"
                           class="forgot-modal_input" />
                    <button class="forgot-modal_submit">Submit</button>
                </div>
            </div>
        </div>
    </div>




</body>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/vue/dist/vue.global.js"></script>
<script src="~/lib/lucide/dist/umd/lucide.min.js"></script>
<script>
    lucide.createIcons();

    function openModal() {
      document.getElementById('forgotModal').classList.remove('hidden');
    }
    function closeModal() {
      document.getElementById('forgotModal').classList.add('hidden');
    }
    document.addEventListener('keydown', function(e) {
      if (e.key === "Escape") closeModal();
    });
</script>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

</html>