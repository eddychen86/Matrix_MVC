@inject ICustomLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Dashboard"];
    var authInfo = Context.GetAuthInfo();
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matrix</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@vuepic/vue-datepicker@latest/dist/main.css">
    <script src="https://cdn.jsdelivr.net/npm/@@vuepic/vue-datepicker@latest/dist/vue-datepicker.iife.js"></script>
    <script type="module" src="~/lib/cally/dist/cally.js"></script>


</head>

<body class="bg-white">
    <div class="flex">
        <div id="dashboard-menu">
            @await Html.PartialAsync("_Menu", Matrix.Controllers.CommonController.BuildMenuModel(Context))
        </div>

        <div class="relative h-screen w-full overflow-y-auto p-4 pl-0">
            <div class="flex flex-col gap-4 min-w-[1500px]">
                <main id="dashboard-content" class="min-h-screen">
                    <div id="dashboard-loader" class="hidden">
                        @await Html.PartialAsync("loadingpage")
                    </div>
                    <div id="dashboard-slot">
                        @RenderBody()
                    </div>
                </main>
                <partial name="~/Views/Shared/_Footer.cshtml" />
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>


    @* 開發環境 (開發版 Vue) *@
    <environment include="Development">
        <script src="~/lib/vue/dist/vue.global.js" asp-append-version="true"></script>
    </environment>
    @* 生產環境 (生產版 Vue) *@
    <environment exclude="Development">
        <script src="~/lib/vue/dist/vue.global.prod.js" asp-append-version="true"></script>
    </environment>

    <script src="~/lib/lucide/dist/umd/lucide.min.js"></script>
    <script type="module" src="~/lib/cally/dist/cally.js"></script>

    <script src="~/js/dashboard/d_main.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
